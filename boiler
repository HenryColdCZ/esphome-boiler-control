globals:
   - id: PIDbattVoltOutGlob
     type: float
     restore_value: no
     initial_value: '0'
     
   - id: PIDsumOutGlob
     type: float
     restore_value: no
     initial_value: '0'

   - id: PIDoutputPowerOutGlob
     type: float
     restore_value: no
     initial_value: '0'

   - id: PIDtemperatureOutGlob
     type: float
